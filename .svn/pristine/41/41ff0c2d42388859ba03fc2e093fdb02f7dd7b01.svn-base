    <RelativeLayout
        android:id="@+id/chat_file_rl1"
        android:layout_width="93.5dp"
        android:layout_height="99dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/chat_file_iv"
            android:layout_width="60dp"
            android:layout_height="46dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/chat_file_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_circle"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3.5dp"
            android:layout_marginRight="3.5dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/chat_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.5dp"
            android:maxEms="6"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#8c8c98"
            android:textSize="12sp"
            android:text="阿克苏的"
            android:layout_below="@id/chat_file_iv"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
