<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_attention_pinyin_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="A"
        android:textSize="13sp"
        android:textColor="#8c8c98"
        android:layout_gravity="center|left"
        android:gravity="center"
        android:layout_marginLeft="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44.5dp"
        android:background="@color/white">
        <net.iclassmate.bxyd.view.CircleImageView
            android:id="@+id/item_attention_name_iv"
            android:layout_width="33.5dp"
            android:layout_height="33.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_geren_xuanren"/>
        <TextView
            android:id="@+id/item_attention_name_tv"
            android:layout_width="200dp"
            android:layout_height="44.5dp"
            android:layout_toRightOf="@+id/item_attention_name_iv"
            android:text="豌豆射手"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.5dp"/>
        <ImageView
            android:id="@+id/item_attention_name_iv_cancel"
            android:layout_width="66dp"
            android:layout_height="24.5dp"
            android:src="@drawable/attention_selector"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp" />
    </RelativeLayout>

</LinearLayout>