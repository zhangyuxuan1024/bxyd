<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="287dp"
    android:layout_height="wrap_content"
    android:background="@drawable/study_circle_dialog"
    android:orientation="vertical"
    tools:context="net.iclassmate.xydspace.ui.activity.chat.SendCopyMessageActivity">

    <FrameLayout
        android:id="@+id/message_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccccd2" />

    <LinearLayout
        android:layout_width="288dp"
        android:layout_height="38dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#8c8c98"
            android:textSize="15sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ccccd2" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="发送"
            android:textColor="#65caff"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>
