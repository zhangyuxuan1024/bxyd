<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f9"
    android:orientation="vertical"
    tools:context="net.iclassmate.xydspace.ui.fragment.OwnerFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="208.5dp"
        android:background="@mipmap/img_wode">

        <FrameLayout
            android:id="@+id/owner_fl"
            android:layout_width="match_parent"
            android:layout_height="208.5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="208.5dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/background_circle" />

                <net.iclassmate.xydspace.view.CircleImageView
                    android:id="@+id/owner_iv_head"
                    android:layout_width="86.5dp"
                    android:layout_height="86.5dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_head_wode" />

                <TextView
                    android:id="@+id/owner_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/owner_iv_head"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="游客"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RelativeLayout>
        </FrameLayout>

        <ImageView

            android:id="@+id/owner_iv_ownerinformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"
            android:padding="38dp"
            android:src="@mipmap/jiantou" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#f5f5f9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/owner_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="#efefef"
            android:dividerHeight="0.5dp"></ListView>
    </RelativeLayout>


</LinearLayout>
