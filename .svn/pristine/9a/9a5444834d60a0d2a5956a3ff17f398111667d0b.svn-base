<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="224dp"
        android:layout_height="92dp"
        android:orientation="vertical"
        android:background="@drawable/background_deletedialog">

        <TextView
            android:id="@+id/deletedialog_tv_title"
            android:layout_width="224dp"
            android:layout_height="53dp"
            android:text="确认删除选中文件？"
            android:textSize="15sp"
            android:textColor="#202025"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccccd2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/deletedialog_cancel"
                android:layout_width="111.5dp"
                android:layout_height="match_parent"
                android:text="取消"
                android:gravity="center"
                android:textColor="#65caff"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccccd2"/>
            <TextView
                android:id="@+id/deletedialog_sure"
                android:layout_width="111.5dp"
                android:layout_height="match_parent"
                android:text="确认"
                android:gravity="center"
                android:textColor="#65caff" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>