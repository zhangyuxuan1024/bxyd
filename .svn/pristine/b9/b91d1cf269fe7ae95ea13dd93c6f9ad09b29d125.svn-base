<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f9"
    android:orientation="vertical"
    tools:context="net.iclassmate.xydspace.ui.activity.study.ReplyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/titlebar_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reply_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingLeft="15dp"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_reply_release"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingRight="15dp"
            android:text="发布"
            android:textColor="@drawable/tv_color_selector"
            android:textSize="14sp" />
    </LinearLayout>

    <net.iclassmate.xydspace.view.ContainsEmojiEditText
        android:id="@+id/comment_reply_et"
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:background="@drawable/study_comment_et_bg"
        android:gravity="top|left"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:textColor="#202025"
        android:textColorHint="#ccccd2"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efefef" />
</LinearLayout>
