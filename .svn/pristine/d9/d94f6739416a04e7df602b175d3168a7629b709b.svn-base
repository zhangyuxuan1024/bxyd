<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_file_back"
    tools:context="net.iclassmate.xydspace.ui.activity.chat.ChatFileActivity">
    <net.iclassmate.xydspace.view.TitleBar
        android:id="@+id/chat_file_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height">
    </net.iclassmate.xydspace.view.TitleBar>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/chat_file_srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chat_file_bar"
        android:layout_above="@+id/linearLayout">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/chat_file_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">
        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="#000000"
        android:alpha="0.8"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@mipmap/ic_faxuexiquan"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@mipmap/ic_zhuanfa"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@mipmap/ic_shanchu"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@mipmap/ic_baocun"/>
    </LinearLayout>
</RelativeLayout>
