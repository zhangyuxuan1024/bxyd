<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        
        <ImageView
            android:id="@+id/item_tran_listview_iv"
            android:layout_width="43dp"
            android:layout_height="33dp"
            android:src="@drawable/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp" />
        
        <TextView
            android:id="@+id/item_tran_listview_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数学习题集"
            android:maxLength="10"
            android:textSize="13sp"
            android:textColor="#8c8c98"
            android:layout_toRightOf="@+id/item_tran_listview_iv"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/item_tran_listview_tv_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上午"
            android:textSize="11dp"
            android:textColor="#ccccd2"
            android:layout_toRightOf="@+id/item_tran_listview_iv"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"/>
        <TextView
            android:id="@+id/item_tran_listview_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:40"
            android:textSize="11dp"
            android:textColor="#ccccd2"
            android:layout_toRightOf="@+id/item_tran_listview_tv_am"
            android:layout_alignBottom="@+id/item_tran_listview_tv_am"
            android:visibility="invisible"/>

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="19dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp">

            <ImageView
                android:id="@+id/item_tran_listview_fl_iv"
                android:layout_width="50dp"
                android:layout_height="29dp"
                android:padding="5dp"
                android:src="@mipmap/ic_shanchu"
                android:layout_gravity="right|center"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/item_tran_listview_fl_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载中..."
                android:textSize="11dp"
                android:textColor="#ccccd2"
                android:layout_gravity="center_vertical"
                android:visibility="visible"/>

        </FrameLayout>
        
    </RelativeLayout>

</LinearLayout>