package net.iclassmate.xydspace.bean.message;

import android.net.Uri;

import net.iclassmate.xydspace.constant.Constant;
import net.iclassmate.xydspace.utils.HttpManager;

import org.json.JSONException;
import org.json.JSONObject;

/**
 * Created by xyd on 2016/8/25.
 */
public class MessageFile {
    private String objectName;  //消息类型标识。如RC:TxtMsg，RC:ImgMsg，RC:VcMsg等
    private long time;          //接收消息时间
    private Uri uri;            //图片消息--图片uri
    private String fileId;      //网盘消息--网盘文件id
    private String fileName;    //网盘消息--网盘文件名称
    private String url;         //网盘消息--图片

    //图片
    public MessageFile(String objectName, long time, Uri uri) {
        this.objectName = objectName;
        this.time = time;
        this.uri = uri;
    }

    //网盘
    public MessageFile(String objectName, long time, String fileId, String fileName, int contentTpye) {
        this.objectName = objectName;
        this.time = time;
        this.fileId = fileId;
        this.fileName = fileName;
        if(contentTpye == 2 || contentTpye == 4) {
            this.url = getFileInfo(fileId);
        }
    }

    /**
     * 获取网盘文件缩略图url（视频、图片）
     * @param fileId
     * @return
     */
    public String getFileInfo(String fileId){
        String scale = null;
        HttpManager httpManager = new HttpManager();
        String result = httpManager.getFileInfo(String.format(Constant.MESSAGE_GET_FILE_DETIAL, fileId));
        if (result != null && !result.equals("") && !result.equals("404")){
            try {
                JSONObject json = new JSONObject(result);
                scale = json.getString("scale");
            } catch (JSONException e) {
                e.printStackTrace();
            }
        }
        return scale;
    }

    public String getObjectName() {
        return objectName;
    }

    public void setObjectName(String objectName) {
        this.objectName = objectName;
    }

    public long getTime() {
        return time;
    }

    public void setTime(long time) {
        this.time = time;
    }

    public Uri getUri() {
        return uri;
    }

    public void setUri(Uri uri) {
        this.uri = uri;
    }

    public String getFileId() {
        return fileId;
    }

    public void setFileId(String fileId) {
        this.fileId = fileId;
    }

    public String getFileName() {
        return fileName;
    }

    public void setFileName(String fileName) {
        this.fileName = fileName;
    }

    public String getUrl() {
        return url;
    }

    public void setUrl(String url) {
        this.url = url;
    }

    @Override
    public String toString() {
        return "MessageFile{" +
                "objectName='" + objectName + '\'' +
                ", time=" + time +
                ", uri=" + uri +
                ", fileId='" + fileId + '\'' +
                ", fileName='" + fileName + '\'' +
                ", url='" + url + '\'' +
                '}';
    }
}
