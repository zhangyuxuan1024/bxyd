<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f9"
    tools:context="net.iclassmate.bxyd.ui.activitys.chat.ChatRecordActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#b3b3b3">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:background="@mipmap/img_sousuokuang"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/chat_record_cancel"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <ImageView
                android:id="@+id/chat_record_search_icon"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@mipmap/ic_magnifier2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"/>
            <EditText
                android:id="@+id/chat_record_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/chat_record_search_icon"
                android:layout_toLeftOf="@+id/chat_record_perch"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:background="@color/white"
                android:textColor="#202025"
                android:textSize="13sp"
                android:hint="搜索"
                android:textColorHint="#ccccd2"/>
            <View
                android:id="@+id/chat_record_perch"
                android:layout_alignParentRight="true"
                android:layout_width="1dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/chat_record_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="取消"
            android:textSize="14sp"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/record_lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            </ListView>

            <LinearLayout
                android:id="@+id/record_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                >

                <Button
                    android:id="@+id/chat_record_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="75dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/chat_record_member_selector"/>
                <Button
                    android:id="@+id/chat_record_byDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="75dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/chat_record_date_selector"/>
            </LinearLayout>

            <Button
                android:id="@+id/chat_record_byDate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:background="@drawable/chat_record_date_selector"/>
            <ImageView
                android:id="@+id/record_noresult_iv"
                android:layout_width="127.5dp"
                android:layout_height="83dp"
                android:layout_marginTop="67.5dp"
                android:src="@mipmap/ic_noresult"
                android:layout_centerHorizontal="true"
                android:visibility="gone"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_record_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/loading_animation"
            android:scaleType="centerInside"
            android:visibility="gone"
            />
    </FrameLayout>

</LinearLayout>
