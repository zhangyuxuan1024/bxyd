<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    tools:context="net.iclassmate.xydspace.ui.activitys.study.openfile.OpenAudioActivity">

    <include layout="@layout/study_title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="229dp"
                android:layout_height="229dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="88dp"
                android:scaleType="centerInside"
                android:src="@mipmap/img_audio_earphone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="46dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/open_audio_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:minHeight="22dp"
                    android:minWidth="22dp"
                    android:padding="8dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_audio_pause" />

                <SeekBar
                    android:id="@+id/open_audio_seekbar"
                    android:layout_width="239dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="8dp"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/seekbar_progress_style"
                    android:secondaryProgress="0"
                    android:thumb="@color/white" />

                <TextView
                    android:id="@+id/open_audio_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/loding_anim" />
    </FrameLayout>

</LinearLayout>
