<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f9"
    android:orientation="vertical"
    tools:context=".ui.activity.information.FriendInformationActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#efefef" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:background="@color/white">

                <net.iclassmate.xydspace.view.study.ShapeImageView
                    android:id="@+id/groups_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/ic_qunzu_xuanren" />
                <TextView
                    android:id="@+id/groups_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="18dp"
                    android:layout_toRightOf="@+id/groups_icon"
                    android:text="名字"
                    android:layout_centerVertical="true"
                    android:textColor="#202025"
                    android:textSize="16sp" />
                <!--<TextView-->
                    <!--android:id="@+id/friend_info_name"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="13dp"-->
                    <!--android:layout_marginTop="18dp"-->
                    <!--android:layout_toRightOf="@+id/friend_info_icon"-->
                    <!--android:text="名字"-->
                    <!--android:textColor="#202025"-->
                    <!--android:textSize="16sp" />-->

                <!--<TextView-->
                    <!--android:id="@+id/friend_info_userCode"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_below="@+id/friend_info_name"-->
                    <!--android:layout_marginLeft="13dp"-->
                    <!--android:layout_marginTop="8dp"-->
                    <!--android:layout_toRightOf="@+id/friend_info_icon"-->
                    <!--android:text="用户号：1234"-->
                    <!--android:textColor="#8c8c98"-->
                    <!--android:textSize="12sp" />-->
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#efefef" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/groups_file"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/item_selector">
                    <TextView
                        android:id="@+id/groups_update_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="修改备注名称"
                        android:textColor="#202025"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        />

                    <TextView
                        android:id="@+id/groups_update_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="as阿斯顿发生发射点发"
                        android:textSize="15sp"
                        android:textColor="#8c8c98"
                        android:layout_toLeftOf="@+id/groups_ivvvv"
                        android:layout_centerVertical="true"
                        android:maxEms="10"
                        android:ellipsize="none"
                        android:singleLine="true"
                        android:layout_marginRight="9.8dp"/>

                    <ImageView
                        android:id="@+id/groups_ivvvv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/ic_next" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#efefef" />

                <RelativeLayout
                    android:id="@+id/groups_studyspace"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <TextView
                        android:id="@+id/groups_info_studyspace_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="主页动态"
                        android:textColor="#202025"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/groups_info_resources"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@+id/groups_info_studyspace_tv"
                        android:layout_toLeftOf="@+id/groups_info_resources_jiantou">
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/groups_info_resources_jiantou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/ic_next" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef" />

            <LinearLayout
                android:id="@+id/groups_add_cancel_care"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注他的主页动态"
                    android:textColor="#202025"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/groups_add_care"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:padding="5dp"
                    android:src="@mipmap/bt_close" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#efefef" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
