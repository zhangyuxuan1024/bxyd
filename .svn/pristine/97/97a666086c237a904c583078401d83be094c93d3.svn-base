<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f9"
    tools:context="net.iclassmate.bxyd.ui.activitys.constacts.SendFriendRequestActivity">

    <net.iclassmate.bxyd.view.TitleBar
        android:id="@+id/send_request_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"></net.iclassmate.bxyd.view.TitleBar>

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_request_title_bar"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="您需要发送验证申请，等对方通过"
        android:textColor="#8c8c98"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/tv"
        android:background="@color/white">

        <EditText
            android:id="@+id/send_request_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/send_request_delete"
            android:background="@null"
            android:maxLength="20"
            android:textColor="#202025"
            android:textSize="15sp" />

        <Button
            android:id="@+id/send_request_delete"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:background="@mipmap/ic_cross"
            android:visibility="invisible" />
    </RelativeLayout>
</RelativeLayout>
