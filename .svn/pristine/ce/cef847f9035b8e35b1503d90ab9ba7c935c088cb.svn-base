<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llShowIndex"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#f5f5f9"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="A"
            android:textColor="#8c8c98"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#efefef" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tra_fri_linear"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tra_fri_check_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_circle" />

        <net.iclassmate.xydspace.view.study.ShapeImageView
            android:id="@+id/tra_fri_head_img"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="9dp"
            android:background="@mipmap/ic_geren_xuanren"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tra_fri_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="9dp"
            android:singleLine="true"
            android:maxEms="10"
            android:ellipsize="end"/>
    </LinearLayout>
</LinearLayout>