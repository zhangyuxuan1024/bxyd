<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical"
    tools:context="net.iclassmate.xydspace.ui.activity.study.NetFileActivity">

    <include layout="@layout/study_title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@color/red">

        <GridView
            android:id="@+id/netfile_gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#efefef"
            android:descendantFocusability="blocksDescendants"
            android:focusable="true"
            android:horizontalSpacing="1dp"
            android:numColumns="4"
            android:scrollbars="none"
            android:verticalSpacing="1dp" />

        <ImageView
            android:id="@+id/img_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/loading_animation"
            android:scaleType="centerInside" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:layout_gravity="bottom"
        android:background="#7000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_net_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingLeft="15dp"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_net_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingRight="15dp"
            android:text="确定"
            android:textColor="#65caff"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
