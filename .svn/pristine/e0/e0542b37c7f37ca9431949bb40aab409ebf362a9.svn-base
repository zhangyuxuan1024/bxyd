<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#393f4f">

        <ImageView
            android:id="@+id/netdisk_iv_back"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_fanhui" />

        <TextView
            android:id="@+id/netdisk_tv_back"
            android:layout_width="wrap_content"
            android:layout_height="20.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6.5dp"
            android:layout_toRightOf="@+id/netdisk_iv_back"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="网盘"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/netdisk_tv_selector"
            android:layout_width="wrap_content"
            android:layout_height="20.5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="选择"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <!--<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#f5f5f9"
        android:visibility="gone">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_centerInParent="true"
            android:background="@drawable/netdisk_search"
            android:cursorVisible="false"
            android:gravity="center"
            android:hint="搜索"
            android:textColorHint="#ccccd2"
            android:textSize="13sp" />
    </RelativeLayout>-->
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="none">

                <net.iclassmate.xydspace.view.teachlearn.MyGridView
                    android:id="@+id/netdisk_mygridview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:horizontalSpacing="0.0dip"
                    android:listSelector="@null"
                    android:numColumns="4"
                    android:scrollbars="none"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="0.0dip">

                </net.iclassmate.xydspace.view.teachlearn.MyGridView>

            </ScrollView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/netdisk_ll_four_selector"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#393f4f"
            android:layout_gravity="bottom"
            android:visibility="invisible"
            android:weightSum="4">

            <ImageView
                android:id="@+id/item_four_selector_faxuexiquan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="23.5dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_fabu_wangpan" />

            <ImageView
                android:id="@+id/item_four_selector_zhuanfa"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="23.5dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_zhuanfa" />

            <ImageView
                android:id="@+id/item_four_selector_download"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="23.5dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_download_wangpan" />


            <ImageView
                android:id="@+id/item_four_selector_shanchu"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24.5dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_shanchu" />



        </LinearLayout>
    </FrameLayout>


</LinearLayout>