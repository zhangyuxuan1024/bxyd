<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/message_time" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <net.iclassmate.xydspace.view.study.ShapeImageView
            android:id="@+id/receive_icon"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="14dp"
            android:src="@mipmap/ic_liaotiantouxiang" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/receive_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/receive_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="-4dp"
                android:text="name"
                android:textColor="#8c8c98"
                android:textSize="12sp" />

            <FrameLayout
                android:id="@+id/receive_message_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="100dp"
                android:maxWidth="120dp">

                <ImageView
                    android:id="@+id/receive_message_pic"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_toLeftOf="@+id/send_icon"
                    android:adjustViewBounds="true"
                    android:background="@mipmap/img_tupian_liaotianchuang02"
                    android:gravity="center|right"
                    android:maxHeight="100dp"
                    android:maxWidth="120dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="3dp"
                    android:paddingTop="3dp" />

                <ImageView
                    android:id="@+id/receive_message_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@mipmap/ic_bofang" />

                <TextView
                    android:id="@+id/receive_video_name"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:background="#7000"
                    android:maxLines="2"
                    android:paddingLeft="14sp"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </FrameLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>