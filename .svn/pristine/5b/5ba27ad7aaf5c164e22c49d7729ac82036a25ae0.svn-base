<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#f8f8f8"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/chat_voice_message"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/chat_spoken_image_selector"
            android:clickable="false"
            android:visibility="gone" />

        <EditText
            android:id="@+id/chat_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/img_shuru_xiaoxi"
            android:ems="10"
            android:maxLines="3"
            android:paddingLeft="6dp"
            android:layout_marginLeft="15dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/chat_emotion"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/chat_emotion_image_selector"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/chat_more"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/chat_more_image_selector"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/send_message"
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/chat_send_button_selector"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>