<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/message_time" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:paddingBottom="10dp"
        android:paddingLeft="60dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <net.iclassmate.xydspace.view.study.ShapeImageView
            android:id="@+id/send_icon"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_liaotiantouxiang" />

        <FrameLayout
            android:id="@+id/send_message_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/send_icon"
            android:maxHeight="100dp"
            android:maxWidth="120dp">

            <ImageView
                android:id="@+id/send_message_pic"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginTop="6dp"
                android:adjustViewBounds="true"
                android:background="@mipmap/img_tupian_liaotianchuang"
                android:maxHeight="100dp"
                android:maxWidth="120dp"
                android:paddingBottom="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="9dp"
                android:paddingTop="3dp" />

            <ImageView
                android:id="@+id/send_message_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@mipmap/ic_bofang" />

            <TextView
                android:id="@+id/send_video_name"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="12dp"
                android:background="#7000"
                android:maxHeight="32dp"
                android:maxLines="2"
                android:paddingLeft="14sp"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </FrameLayout>

        <ImageView
            android:id="@+id/img_send_tv_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@id/send_message_frame"
            android:padding="5dp"
            android:src="@mipmap/ic_fasongshibai"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>