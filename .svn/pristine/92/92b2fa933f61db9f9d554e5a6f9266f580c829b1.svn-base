<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f9"
    android:orientation="vertical"
    tools:context=".ui.activitys.information.FriendInformationActivity">

    <net.iclassmate.xydspace.view.TitleBar
        android:id="@+id/friend_info_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/friend_info_noLoading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#efefef" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:background="@color/white">

                <net.iclassmate.xydspace.view.study.ShapeImageView
                    android:id="@+id/friend_info_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/ic_touxiang_mingpian" />

                <TextView
                    android:id="@+id/friend_info_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="18dp"
                    android:layout_toRightOf="@+id/friend_info_icon"
                    android:text="名字"
                    android:textColor="#202025"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/friend_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="18dp"
                    android:layout_toRightOf="@+id/friend_info_icon"
                    android:text="名字"
                    android:maxEms="10"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#202025"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/friend_info_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/friend_info_name"
                    android:background="@mipmap/ic_boy"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/friend_info_userCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/friend_info_name"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/friend_info_icon"
                    android:text="用户号：1234"
                    android:textColor="#8c8c98"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#efefef" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/friend_chat_file"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/item_selector">

                    <TextView
                        android:id="@+id/tv_remarks_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="修改备注名称"
                        android:textColor="#202025"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_remarks_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#8c8c98"
                        android:maxEms="10"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_toLeftOf="@+id/imageView"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/ic_next"
                        android:id="@+id/imageView" />
                    <!--
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@mipmap/ic_next"/>
                        -->
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#efefef" />

                <RelativeLayout
                    android:id="@+id/friend_info_studyspace"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <TextView
                        android:id="@+id/friend_info_studyspace_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="个人主页"
                        android:textColor="#202025"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/friend_info_resources"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@+id/friend_info_studyspace_tv"
                        android:layout_toLeftOf="@+id/friend_info_resources_jiantou">
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/friend_info_resources_jiantou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/ic_next" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef" />

            <LinearLayout
                android:id="@+id/ll_add_cancel_care"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注他/她的主页动态"
                    android:textColor="#202025"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/add_cancel_care"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:padding="5dp"
                    android:src="@mipmap/bt_close" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/friend_btn_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <Button
                    android:id="@+id/friend_info_chat_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/friend_info_chat_selector" />

                <Button
                    android:id="@+id/friend_info_delete_friend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/friend_info_delete_selector" />
            </LinearLayout>

            <Button
                android:id="@+id/person_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/person_info_selector"
                android:visibility="gone" />

            <Button
                android:id="@+id/group_org_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/group_org_btn_selector"
                android:visibility="gone" />

        </LinearLayout>

        <include
            android:id="@+id/loading_layout"
            layout="@layout/loadinglayout" />
    </FrameLayout>

</LinearLayout>
