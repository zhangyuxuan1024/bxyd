<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@color/titlebar_color"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/study_message_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="7dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_fanhui" />

    <TextView
        android:id="@+id/study_message_left_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/study_message_title_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true"
        android:text="消息提醒"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/study_message_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="7dp"
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/study_message_right_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="15dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_fanhui"
        android:visibility="invisible" />
</LinearLayout>