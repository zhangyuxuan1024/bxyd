<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/chat_file_rl1"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_centerHorizontal="true"
        android:background="@color/xb_line_7">

        <TextView
            android:id="@+id/chat_file_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7.5dp"
            android:text="文件"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="7.5dp"
            />
        
        <ImageView
            android:id="@+id/chat_file_select"
            android:layout_width="19.5dp"
            android:layout_height="19.5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@mipmap/ic_circle"
            android:layout_marginTop="3.5dp"
            android:layout_marginRight="3.5dp"/>
        
        <TextView
            android:id="@+id/chat_file_name"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="4.5dp"
            android:layout_marginLeft="4.5dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="阿克苏的罚款送asdfsafasf"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chat_file_rl2"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/chat_file_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/img_morentupian"/>
    </RelativeLayout>
</RelativeLayout>
