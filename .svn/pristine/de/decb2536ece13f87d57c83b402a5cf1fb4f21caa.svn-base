<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef">

    <net.iclassmate.xydspace.view.study.ShapeImageView
        android:id="@+id/comment_item_img"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        android:src="@mipmap/ic_geren_xuanren" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/comment_item_img"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/comment_item_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/comment_item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textColor="#65caff"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/comment_item_tv_com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="太棒啦"
            android:textColor="#8c8c98"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/comment_item_tv_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="太棒啦"
            android:textColor="#8c8c98"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/comment_item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="9dp"
        android:text="下午20:35"
        android:textColor="#8c8c98"
        android:textSize="13sp" />
</RelativeLayout>