<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/message_time" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp">

        <net.iclassmate.xydspace.view.study.ShapeImageView
            android:id="@+id/receive_icon"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="14dp"
            android:src="@mipmap/ic_liaotiantouxiang" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/receive_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/receive_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="-4dp"
                android:text="name"
                android:textColor="#8c8c98"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/receive_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/img_receive"
                android:gravity="center|left"
                android:maxWidth="240dp"
                android:textColor="#202025"
                android:textSize="14sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/receive_Imagemessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginRight="6dp"
                android:layout_marginTop="6dp"
                android:adjustViewBounds="true"
                android:background="@mipmap/img_tupian_liaotianchuang02"
                android:maxHeight="100dp"
                android:maxWidth="120dp"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>