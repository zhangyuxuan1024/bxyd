<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f9"
    tools:context="net.iclassmate.xydspace.ui.activity.constacts.FriendResActivity">
    <net.iclassmate.xydspace.view.TitleBar
        android:id="@+id/friend_result_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height">
    </net.iclassmate.xydspace.view.TitleBar>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/search_result_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ListView
                android:id="@+id/friend_result_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scrollbars="none"
                android:layout_weight="1"
                android:divider="#efefef"
                android:dividerHeight="1dp"
                android:visibility="visible"
                />
            <ImageView
                android:id="@+id/search_no_result"
                android:layout_width="117dp"
                android:layout_height="83dp"
                android:layout_marginTop="68dp"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/ic_no_result"
                android:visibility="gone"/>
        </LinearLayout>

        <include
            android:id="@+id/loading_layout"
            layout="@layout/loadinglayout"/>
    </FrameLayout>

</LinearLayout>
