<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical"
    tools:context="net.iclassmate.xydspace.ui.activity.study.StudySpaceActivity">

    <include layout="@layout/study_title" />

    <net.iclassmate.xydspace.view.pullrefreshview.PullToRefreshLayout
        android:id="@+id/pull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee">

        <include layout="@layout/pull_to_refresh_header" />

        <net.iclassmate.xydspace.view.pullrefreshview.PullableScrollView
            android:id="@+id/fragment_exam_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeeeee"
            android:fillViewport="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="175dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/img_bg2"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/study_user_circle_head_out"
                        android:orientation="horizontal"
                        android:padding="3dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#0FFF"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/study_user_circle_head"
                                android:orientation="horizontal"
                                android:padding="2dp">

                                <net.iclassmate.xydspace.view.study.ShapeImageView
                                    android:id="@+id/study_user_img"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/ic_head_xuexiquan" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/study_message_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="60dp"
                        android:background="@drawable/study_circle_message"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/study_message_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="19dp"
                            android:text="6条消息"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="14dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_next" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <net.iclassmate.xydspace.view.FullListView
                        android:id="@+id/study_sapce_listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:divider="#efefef"
                        android:dividerHeight="1dp"
                        android:listSelector="@color/white"
                        android:scrollbars="none" />

                    <ImageView
                        android:id="@+id/img_anim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/loading_animation"
                        android:scaleType="centerInside" />
                </FrameLayout>
            </LinearLayout>
        </net.iclassmate.xydspace.view.pullrefreshview.PullableScrollView>

        <include layout="@layout/pull_to_load_footer" />
    </net.iclassmate.xydspace.view.pullrefreshview.PullToRefreshLayout>
</LinearLayout>
