<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f9"
    tools:context="net.iclassmate.xydspace.ui.activitys.constacts.PhoneContactActivity">

    <net.iclassmate.xydspace.view.TitleBar
        android:id="@+id/phonecontacts_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height" />

    <ListView
        android:id="@+id/phone_contacts_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/phonecontacts_title_bar"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/phone_contacts_lb"
        android:layout_weight="1"
        android:scrollbars="none"></ListView>

    <net.iclassmate.xydspace.view.IndexBar
        android:id="@+id/phone_contacts_lb"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/phone_contacts_tvShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/show_bg"
        android:gravity="center"
        android:text="A"
        android:textColor="#fff"
        android:textSize="36sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_contacts_loading"
        android:layout_width="@dimen/anim_width"
        android:layout_height="@dimen/anim_height"
        android:layout_centerInParent="true"
        android:background="@drawable/loading_animation"
        android:scaleType="centerInside"
        android:visibility="gone" />

</RelativeLayout>
