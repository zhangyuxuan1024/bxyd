<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f9"
    android:orientation="vertical">

    <net.iclassmate.xydspace.view.TitleBar
        android:id="@+id/record_info_titlebar"
        android:layout_width="match_parent"
        android:layout_height="44dp">
    </net.iclassmate.xydspace.view.TitleBar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/record_info_lv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
        </ListView>

        <ImageView
            android:id="@+id/record_info_noresult_iv"
            android:layout_width="127.5dp"
            android:layout_height="83dp"
            android:layout_marginTop="67.5dp"
            android:src="@mipmap/ic_noresult"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/iv_record_info_loading"
            android:layout_width="@dimen/anim_width"
            android:layout_height="@dimen/anim_height"
            android:layout_gravity="center"
            android:background="@drawable/loading_animation"
            android:scaleType="centerInside"
            android:visibility="gone"/>
    </FrameLayout>


</LinearLayout>
