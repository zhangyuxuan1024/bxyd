<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f9"
    tools:context="net.iclassmate.xydspace.ui.activitys.constacts.GroupListActivity">

    <net.iclassmate.xydspace.view.TitleBar
        android:id="@+id/discussionList_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/discussionList_title_bar">

        <RelativeLayout
            android:id="@+id/discussion_list_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/discussion_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:divider="#efefef"
                android:dividerHeight="1dp"
                android:scrollbars="none" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_ani_discussion"
            android:layout_width="@dimen/anim_width"
            android:layout_height="@dimen/anim_height"
            android:layout_gravity="center"
            android:background="@drawable/loading_animation"
            android:scaleType="centerInside" />
    </FrameLayout>
</RelativeLayout>
