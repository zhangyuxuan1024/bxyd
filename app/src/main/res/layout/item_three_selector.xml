<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="#393f4f">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:id="@+id/item_three_selector_faxuexiquan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="23.5dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_fabu_wangpan" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="23.5dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_zhuanfa" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="23.5dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_download_wangpan" />


        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="24.5dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_shanchu" />
    </LinearLayout>


</RelativeLayout>