<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f9"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_index_img"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="11dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/item_index_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#202025"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/item_index_img_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_index_tv_name"
            android:layout_marginTop="12dp"
            android:src="@mipmap/ic_place" />

        <TextView
            android:id="@+id/item_index_tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_index_tv_name"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/item_index_img_location"
            android:paddingLeft="6dp"
            android:textColor="#8c8c98"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/item_index_img_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_index_img_location"
            android:layout_marginTop="12dp"
            android:src="@mipmap/ic_time" />

        <TextView
            android:id="@+id/item_index_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_index_img_location"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/item_index_img_time"
            android:paddingLeft="6dp"
            android:textColor="#8c8c98"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_index_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="38dp"
            android:textColor="#f85944"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_index_tv_zixun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_index_tv_name"
            android:layout_marginTop="10dp"
            android:text="资讯"
            android:textColor="#8c8c98"
            android:textSize="13sp"
            android:visibility="invisible"/>
    </RelativeLayout>

</LinearLayout>