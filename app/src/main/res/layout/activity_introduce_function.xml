<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#393f4f">
        <ImageView
            android:id="@+id/introduce_function_iv_back"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_fanhui"/>
        <TextView
            android:id="@+id/introduce_function_tv_back"
            android:layout_width="wrap_content"
            android:layout_height="20.5dp"
            android:text="返回"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/introduce_function_iv_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6.5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="功能介绍"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false">
            <ImageView
                android:id="@+id/introduce_function_iv_example"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </ScrollView>
    </LinearLayout>
</LinearLayout>