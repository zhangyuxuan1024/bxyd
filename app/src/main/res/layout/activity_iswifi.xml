<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="92dp"
        android:background="@drawable/background_deletedialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/iswifi_conetnt"
            android:layout_width="230dp"
            android:layout_height="53dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="您正在使用非wifi网络，播放将产生费用，继续播放？"
            android:textColor="#202025"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccccd2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/iswifi_cancel"
                android:layout_width="124.5dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="取消"
                android:textColor="#65caff" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccccd2" />

            <TextView
                android:id="@+id/iswifi_sure"
                android:layout_width="124.5dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="确认"
                android:textColor="#65caff" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>