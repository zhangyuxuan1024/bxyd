<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f9"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#393f4f">

        <TextView
            android:id="@+id/createnewfile_cancel"
            android:layout_width="60dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/createnewfile_sure"
            android:layout_width="60dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="确认"
            android:textColor="#65caff"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/createnewfile_filename"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:hint="请输入文件夹名称"
            android:singleLine="true"
            android:maxLength="30"
            android:paddingLeft="15dp"
            android:textColorHint="#ccccd2"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>