<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f9"
    android:orientation="vertical"
    tools:context="net.iclassmate.bxyd.ui.activitys.study.TraStudyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/titlebar_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_comment_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="取消"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_comment_release"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="发布"
            android:textColor="@drawable/tv_color_selector" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <EditText
                android:id="@+id/tv_forawrd"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:background="@drawable/study_comment_et_bg"
                android:gravity="top|left"
                android:hint="说点什么吧..."
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:textColor="#202025"
                android:textColorHint="#ccccd2"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#efefef" />

            <net.iclassmate.bxyd.view.FullListView
                android:id="@+id/study_sapce_msg_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:divider="#efefef"
                android:dividerHeight="1dp"
                android:scrollbars="none" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#efefef" />

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#f5f5f9" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
